{
  "name": "Jira Harvest Time Tracking",
  "version": "2.2",
  "description": "Adds a Harvest Button to JIRA",
  "content_scripts": [
    {
      "matches": ["*://*/*projects*/issues/*",
                  "*://*/*browse/*",
                  "*://*/*secure/*projectKey=*"
                 ],
      "js": ["jiraharvest.js"]
    }
  ],
  "icons": { "128": "harvest-jira-icon.png" },
  "manifest_version" : 2
}
